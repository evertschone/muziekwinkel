<h2>Change your password</h2>

<%% form_tag url_for(:action => "update") do %>
<p><label for="old_password" class="block">Old password</label><br />
<%%= password_field_tag 'old_password', @old_password, :size => 45 %></p>

<p><label for="password">New password</label><br />
<%%= password_field_tag 'password', {}, :size => 45 %></p>
  
<p><label for="password_confirmation">Confirm new password</label><br />
<%%= password_field_tag 'password_confirmation', {}, :size => 45 %></p>
  
<p><%%= submit_tag 'Change password' %></p>
<%% end %>

<p>or <%%= link_to 'go back', '/' %></p>