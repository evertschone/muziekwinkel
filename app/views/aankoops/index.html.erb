<h1>Aankopen</h1>

<table>
  <tr>
    <th>Album/Nummer</th>
    <th>Titel</th>
    <th>Artiest</th>
    <th>Prijs</th>
    <th>Datum</th>
    <th>Betaald</th>
  </tr>

<% for aankoop in @aankoops %>
  <tr>
    <td><%=h aankoop.product.type %></td>
    <td><%=h aankoop.product.titel %></td>
    <td><%=h aankoop.product.artiest %></td>
    <td><%=h aankoop.product.prijs %></td>
    <td><%=h aankoop.datum %></td>
    <td><%=h aankoop.betaald %></td>
    <td><%= link_to 'Show', klant_aankoop_path(aankoop.klant_id, aankoop) %></td>
    <% if user_is_medewerker? %>
      <td><%= link_to 'Edit', edit_klant_aankoop_path(aankoop.klant_id, aankoop) %></td>
      <td><%= link_to 'Destroy', klant_aankoop_path(aankoop.klant_id, aankoop), :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
<br>
<b>Totale prijs:</b> <%= @aankoops.inject(0) { |sum, aankoop| sum + aankoop.product.prijs.to_f } %>

