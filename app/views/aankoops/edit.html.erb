<h1>Editing aankoop</h1>

<% form_for(:klant, @aankoop) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :product %><br />
    <%= f.collection_select :product_id, Product.find(:all).sort_by {|item| item.titel}, :id, :titel %>
  </p>
  <p>
    <%= f.label :klant %><br />
    <%= f.collection_select :klant_id, Klant.find(:all).sort_by {|item| item.naam_omgekeerd}, :id, :naam_omgekeerd %>
  </p>
  <p>
    <%= f.label :datum %><br />
    <%= f.datetime_select :datum %>
  </p>
  <p>
    <%= f.label :betaald %><br />
    <%= f.check_box :betaald %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', klant_aankoop_path(@aankoop.klant_id, @aankoop) %> |
<%= link_to 'Back', klant_aankoops_path %>
