<table style="width: 100%" bgcolor="#ffffff">
  <tr>
    <td width="100px" rowspan="6">
      <%= link_to image_tag((album.coverart or 'default-album.jpg'), :width => '100px', :height => '100px', :vspace => '3px', :hspace => '3px', :border => '0px'),
          :controller => 'albums', :action => 'show', :id => album.id %>
    </td>
    <td width="50px">Artiest:</td>
    <td><%=h album.artiest %>&nbsp;</td>
  </tr>
  <tr>
    <td>Album:</td>
    <td><%= link_to album.titel, album %>&nbsp;</td>
  </tr>
  <tr>
    <td>Lengte:</td>
    <td><%=h album.lengte %>&nbsp;</td>
  </tr>
  <tr>
    <td>Releasedatum:</td>
    <td><%=h album.jaar %>&nbsp;</td>
  </tr>
  <tr>
    <td>Genre:</td>
    <td><%=h album.genre %>&nbsp;</td>
  </tr>
  <tr>
  	<td>Tracks:</td>
    <td><%=album.nummers.count(:tracknr)%></td>
  </tr>
    <tr>
    <td><div class="noplayknop" style="margin-left:4px; margin-bottom:2px"></div>
        <% form_tag('/winkelwagen', :method => "POST") do %>
          <input type="hidden" name="id" value="<%= album.id %>"/>
          <button type="submit" style="border: 0px; padding: 0px; margin: 0px;" class="numkoopknop"></button>
        <% end %>
    </td>
    <td>Prijs:</td>
    <td>&euro;<%=h album.prijs %></td>
  </tr>
  <% if user_is_medewerker? %>
  <tr>
    <td></td>
    <td><%= link_to 'Show', album %></td>
    <td>
        
          <%= link_to 'Edit', edit_album_path(album) %>
          <%= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete %>
        
    </td>
</tr><% end %>
</table>
<br />
