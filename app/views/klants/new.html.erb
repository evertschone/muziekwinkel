<h1>New klant</h1>

<% form_for(@klant) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :voornaam %><br />
    <%= f.text_field :voornaam %>
  </p>
  <p>
    <%= f.label :achternaam %><br />
    <%= f.text_field :achternaam %>
  </p>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :geboortedatum %><br />
    <%= f.date_select :geboortedatum, :start_year => 1900, :end_year => 2010 %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation %>
  <p>
    <%= f.label :creditcard %><br />
    <%= f.text_field :creditcard %>
  </p>
  <p>
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </p>
  <p>
    <%= f.label :huisnummer %><br />
    <%= f.text_field :huisnummer %>
  </p>
  <p>
    <%= f.submit "Sign up" %>
  </p>
<% end %>

<%= link_to 'Show', @klant %> |
<%= link_to 'Back', klants_path %>
