<h1>Listing nummers</h1>
<h3>Pagina <%= h @pagina %></h3>

<% if @pagina > 0 %>
  <%= link_to 'Vorige', '/nummers/?pagina=' + (@pagina - 1).to_s %>
<% end %>

<%= link_to 'Volgende', '/nummers/?pagina=' + (@pagina + 1).to_s %>

<table>
  <tr>
    <th>Artiest</th>
    <th>Titel</th>
    <th>Album</th>
    <th>Genre</th>
    <th>Lengte</th>
    <th>Prijs</th>
  </tr>

<% for nummer in @nummers %>
  <tr>
    <td><%=h nummer.artiest %></td>
    <td><%=h nummer.titel %></td>
    <td><%=h nummer.album.titel unless nummer.album.nil? %></td>
    <td><%=h nummer.genre %></td>
    <td><%=h nummer.lengte %></td>
    <td><%=h nummer.prijs %></td>
    <td><%= link_to 'Show', nummer %></td>
    <td><%= link_to 'Edit', edit_nummer_path(nummer) %></td>
    <td><%= link_to 'Destroy', nummer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New nummer', new_nummer_path %>
